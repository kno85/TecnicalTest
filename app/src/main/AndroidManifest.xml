<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kno85.tecnicaltest">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CharactersApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_group_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_group_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.TecnicalTest"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TecnicalTest.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.TecnicalTest.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kno85.tecnicaltest.ui.main.MainActivity" />
        </activity>
    </application>

</manifest>