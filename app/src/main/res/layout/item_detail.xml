<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_image_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.ItemDetailActivity" />

    <TextView
        android:id="@+id/item_text_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_image_detail"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context=".ui.ItemDetailActivity" />
    <Button
        android:layout_below="@+id/item_text_detail"
        android:id="@+id/item_checkUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/check_updates"
        tools:context=".ui.ItemDetailActivity" />

</RelativeLayout>
